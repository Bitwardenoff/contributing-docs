{
  "name": "@bitwarden/contributing-docs",
  "version": "0.0.0",
  "description": "Bitwarden Contributing Docs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitwarden/contributing-docs.git"
  },
  "author": "Bitwarden Inc. <hello@bitwarden.com> (https://bitwarden.com)",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/bitwarden/contributing-docs/issues"
  },
  "homepage": "https://bitwarden.com",
  "private": true,
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "docusaurus start",
    "build": "docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "typecheck": "tsc",
    "prettier": "prettier --write .",
    "lint": "prettier --check .",
    "prepare": "husky install",
    "spellcheck": "cspell lint \"**/*.md{x,}\""
  },
  "dependencies": {
    "@docusaurus/core": "3.0.0",
    "@docusaurus/preset-classic": "3.0.0",
    "@mdx-js/react": "3.0.0",
    "clsx": "1.2.1",
    "docusaurus-lunr-search": "3.2.0",
    "prism-react-renderer": "2.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "remark-kroki": "0.2.10"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.0.0",
    "@docusaurus/tsconfig": "3.0.0",
    "@types/react": "18.2.29",
    "cspell": "8.0.0",
    "husky": "8.0.3",
    "lint-staged": "15.0.2",
    "prettier": "3.0.3",
    "typescript": "5.2.2"
  },
  "overrides": {
    "docusaurus-lunr-search": {
      "@docusaurus/core": "$@docusaurus/core",
      "react": "$react",
      "react-dom": "$react-dom"
    }
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*": "prettier --cache --write --ignore-unknown",
    "*.md{x,}": "cspell lint"
  }
}
